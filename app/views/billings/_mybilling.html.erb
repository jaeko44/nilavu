<% provide(:title, 'Billings') %>
<div class="rt-box col-xs-12 col-sm-9 col-md-10 c_bg_white c_height_5">
  <%= render :partial => "users/topright_icons", :locals => {:title_name => t('billing.title')} %>

  <div class="row">
    <div class="margin_30 ">
      <div class=" card-details ">

        <div class="row pad_tb20 ">
          <div class="form-group col-md-6 col-sm-6 ">
            <h1><%= t('billings.total_balace') %></h1>
            <h1 class="col-md-offset-6" id="bal">$<%= @bill.balance.credit %></h1>
          </div>

          <%= form_tag billings_promo_path, multipart: true, :id => "megamform", :novalidate => "novalidate", :method => "post", :remote => true  do %>
          <%= hidden_field_tag 'balance', nil, placeholder: "", :class =>"form-control bals", :value => @bill.balance.credit  %>

          <div class="form-group col-md-4 col-sm-6 ">
            <label class="col-md-7 col-sm-12 col-xs-12 row" for="exampleInputName2"><%= t('billings.promo_code') %>
            </label>
            <!--	<input type="text" placeholder="" id="exampleInputName2" class="form-control-card-details col-md-6 col-xs-12 col-sm-12"> -->
            <%= text_field_tag 'code', nil, :required => true, :id => 'promos_code', :class => 'form-control-card-details col-md-6 col-xs-12 col-sm-12', placeholder: "", :data => {:placement=>"right" } %>

          </div>

          <div class="form-group col-md-2 col-sm-6 ">
            <!-- <a href="#">APPLY</a> -->

            <%= submit_tag t('billings.apply'), :class => "btn btn-success col-md-10 col-xs-10 a_override"%>
            <% end%>

          </div>
        </div>

        <div class="bottom-divider  settings_top"></div>

        <div class="row ">
          <div class="col-md-6  pay_via">
            <h2>
              <i class="fa fa-credit-card"></i><%= t('billings.apply') %></h2>
            <%= render :partial => "billings/payment_merchants" %>
          </div>
          <div class="col-md-5 col-md-offset-1 help_center_left_right">
            <h2>
              <i class="fa fa-plus-circle"></i><%= t('billings.help_center') %></h2>
            <p>
              <%= t('billings.help_info') %>
            </p>
            <h3>
              <i class="fa fa-phone-square"></i>
              +1-800-618-6813 /
              <a href="mailto:support@megam.io">
                <i class="fa fa-envelope-o"></i>
                <%= t('billings.support_mail') %></a>
            </h3>
          </div>
        </div>

        <div class="bottom-divider  settings_top"></div>
        <%= render :partial => "billings/pay_now" %>
        <div class="col-md-12 row">
          <h2>
            <i class="fa fa-history"></i>
            <%= t('billings.invoices') %></h2>
        </div>
        <div class="bottom-divider  settings_top"></div>
        <div class="col-md-12 row">
          <div class="table-responsive" id="bill_history">
            <table class="table">
              <thead>
                <tr>

                  <th><%= t('billings.fromDate') %></th>
                  <th><%= t('billings.toDate') %></th>
                  <th><%= t('billings.month') %></th>
                  <th><%= t('billings.amount') %></th>
                  <th><%= t('billings.currency') %></th>
                  <th><%= t('billings.timestamp') %></th>

                </tr>
              </thead>
              <tbody>
                <% @invoices.invoices.each do |history| %>
                <tr>
                  <td><%= history.from_date %></td>
                  <td><%= history.to_date %></td>
                  <td><%= history.month %></td>
                  <td><%= history.billing_amount %></td>
                  <td><%= history.currency_type %></td>
                  <td><%= history.created_at %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
