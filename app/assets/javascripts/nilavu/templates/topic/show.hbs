<div class="rt-box col-xs-12 c_height_5">
    {{topic-list-header currentUser=currentUser title=title nameEnabled=nameEnabled name=name subTitleEnabled=subTitleEnabled subTitle=subTitle}}
    <div class="bottom-divider"></div>
    <div class="">
        <div class="row c_pading-b25">
            <button type="button" class="btn btn-default pull-left " {{action "refresh"}}>
                {{#conditional-loading-spinner condition=showRefreshSpinner size="large" }}
                    <span class="glyphicon glyphicon-refresh"></span>
                {{/conditional-loading-spinner}}
            </button>
            <button type="button" class="btn btn-default pull-right link-icons" {{action "destroy"}}>
                <span class="glyphicon glyphicon-trash"></span>
                <span class="pull-right">
                    {{conditional-loading-spinner condition=showDeleteSpinner size="large"}}
                </span>
            </button>
            <button type="button" class="btn btn-default pull-right link-icons" {{action "showVNC"}}>
                <span class="glyphicon glyphicon-console"></span> CONSOLE
            </button>
            <button type="button" class="btn btn-default pull-right link-icons" {{action "restart" }}>
                <span class="glyphicon glyphicon-repeat"></span> Reboot
                <span class="pull-right">
                    {{conditional-loading-spinner condition=showRebootSpinner size="large"}}
                </span>
            </button>
            <button type="button" class="btn btn-default pull-right link-icons" {{action "stop"}} {{bind-attr disabled="stopDisabled"}}>
                <span class="glyphicon glyphicon-pause"></span> Shutdown
                <span class="pull-right">
                    {{conditional-loading-spinner condition=showStopSpinner size="large"}}
                </span>
            </button>
            <button type="button" class="btn btn-default pull-right link-icons" {{action "start"}} {{bind-attr disabled="startDisabled"}}>
                <span class="glyphicon glyphicon-play"></span> Start
                <span class="pull-right">
                    {{conditional-loading-spinner condition=showStartSpinner size="large"}}
                </span>
            </button>
        </div>
    </div>
    <section class="vm">
        <ul class="tabs">
            {{vm-management-tab panels=panels selectedTab=selectedTab tab="info"}}
            {{vm-management-tab panels=panels selectedTab=selectedTab tab="snapshots"}}
            {{vm-management-tab panels=panels selectedTab=selectedTab tab="network"}}
            {{vm-management-tab panels=panels selectedTab=selectedTab tab="cpu"}}
            {{vm-management-tab panels=panels selectedTab=selectedTab tab="ram"}}
            {{vm-management-tab panels=panels selectedTab=selectedTab tab="keys"}}
            {{vm-management-tab panels=panels selectedTab=selectedTab tab="logs"}}
        </ul>
        <div class="vm-modal-body">
            {{#each panels as |tab|}}
                {{component tab selectedTab=selectedTab model=model}}
            {{/each}}
        </div>
    </section>
</div>
